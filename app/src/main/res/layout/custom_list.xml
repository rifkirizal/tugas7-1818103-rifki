<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/list_row_hover_start_color"
    android:padding="5dp">
    <LinearLayout
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iconid"
            android:layout_width="99dp"
            android:layout_height="80dp"
            android:src="@drawable/paimon" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_weight="5"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_penerbit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_toEndOf="@+id/thumbnail_offline"
            android:layout_toRightOf="@+id/thumbnail_offline"
            android:text="UID akun"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/text_tahun"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_toEndOf="@+id/thumbnail_offline"
            android:layout_toRightOf="@+id/thumbnail_offline"
            android:text="IGN akun"
            android:textColor="@color/black" />
    </LinearLayout>
</LinearLayout>